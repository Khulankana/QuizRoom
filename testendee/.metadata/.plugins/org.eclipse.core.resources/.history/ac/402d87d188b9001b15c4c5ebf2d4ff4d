package testendee.main;

import java.util.HashMap;
import java.util.Map;

import javax.ejb.LocalBean;
import javax.ejb.Singleton;

import testendee.client.main.Request;

/**
 * Session Bean implementation class ThreadContext
 */
@Singleton
@LocalBean
public class ThreadContext {

	private static Map<Long, Request> requests = new HashMap<Long, Request>();

	@Override
	public String reset() {
		this.setCurrentRequest(new Request());

		String requestId = String.format("%s_%s", new SimpleDateFormat("yyyyMMddHHmmss").format(new Date()),
				Thread.currentThread().getId());
		;

		return NWThreadLocal.reset();
	}

	public Request getCurrentRequest() {
		Request request = requests.get(getId());
		if (request == null) {
			this.reset();
			request = requests.get(getId());
		}
		return request;
	}

	public void setCurrentRequest(Request request) {
		NWThreadLocal.setSecondLang(request.getLanguage() != 0);
		NWThreadLocal.setFuncNo(request.getFuncNo());
		request.setRequestId(NWThreadLocal.getRequestId());
		requests.put(getId(), request);
	}

	private long getId() {
		return Thread.currentThread().getId();
	}

	public void release() {
		if (requests.containsKey(getId())) {
			requests.remove(getId());
		}
	}

	public int getJobSize() {
		return requests.size();
	}

}
